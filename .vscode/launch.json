  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Parcel",
      "program": "${workspaceFolder}/node_modules/.bin/parcel",
      "request": "launch",
      "args": ["build", "--no-cache"],
      "cwd": "${workspaceFolder}/library",
      "skipFiles": ["<node_internals>/**"],
      "env": { "PARCEL_WORKERS": 0 },
      "type": "pwa-node"
    }
  ]
}
